{
  "name": "app",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "build": "npx ts-node src/build.ts",
    "dev": "npm run build -- --dev && concurrently \"npm run serve:dev\" \"npm run build -- --dev --watch\"",
    "serve:dev": "sirv -D public",
    "serve": "sirv public --no-clear",
    "test": "ts-mocha --timeout 20000 --type-check -p tsconfig.json src/**/*.spec.ts",
    "check": "svelte-check --tsconfig ./tsconfig.json"
  },
  "devDependencies": {
    "@brisket-dao/core": "^1.0.0",
    "@tsconfig/svelte": "^2.0.0",
    "@types/expect": "^24.3.0",
    "@types/mocha": "^9.1.0",
    "assert-browserify": "^2.0.0",
    "bip39": "^3.0.4",
    "chai": "^4.3.6",
    "crypto-browserify": "^3.12.0",
    "esbuild": "^0.14.23",
    "esbuild-plugin-alias": "^0.2.1",
    "esbuild-svelte": "^0.6.3",
    "ethers": "^5.5.1",
    "ipfs-core": "^0.14.1",
    "libp2p-crypto": "^0.21.2",
    "mocha": "^9.2.1",
    "orbit-db": "^0.28.3",
    "path-browserify": "^1.0.1",
    "peer-id": "^0.16.0",
    "seededrsa": "^1.1.1",
    "stream-browserify": "^3.0.0",
    "svelte": "^3.46.4",
    "svelte-check": "^2.4.5",
    "svelte-preprocess": "^4.10.3",
    "svelte-spa-router": "^3.2.0",
    "ts-mocha": "^9.0.2",
    "tslib": "^2.0.0",
    "typescript": "~4.4.0",
    "web3modal": "^1.9.4"
  },
  "dependencies": {
    "sirv-cli": "^1.0.0"
  }
}
